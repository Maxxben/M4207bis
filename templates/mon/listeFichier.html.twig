{% extends 'base.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block body %}
        
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="#">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor02">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/deconnexion">deconnexion</a>
          <span class="sr-only">(current)</span>
        </a>
        <li class="nav-item">
          <a class="nav-link" href="/mon">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/creation">Inscription</a>
        </li>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listeUser">Liste utilisateur</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listeFichier">Liste Fichiers</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/fichier">Ajouter Fichier</a>
        </li>
    </ul>
  </div>
</nav>

<div class="example-wrapper">
    <h1>Liste des Fichiers</h1>
    <table class="table table-hover">
    <thead>
      <br>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">chemin</th>
           <th scope="col">date</th>
         
        </tr>
      </thead>
      <tbody>
    {% for fichier in listFichier %}
        <tr class="table-active">
          <th scope="row">{{ fichier.id }}</th>
          <th scope="row">{{ fichier.chemin }}</th>
          <th scope="row">{{ fichier.date.format("d/m/Y")}}</th>
        </tr>
    {% endfor %}
      </tbody>
    </table>
  
</div>
    
{% endblock %}
